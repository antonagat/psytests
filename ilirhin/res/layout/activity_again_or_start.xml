<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/AgainOrStartExitMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="116dp"
        android:layout_marginLeft="38dp"
        android:onClick="onAgainOrStartClick"
        android:text="@string/exit_menu" />

    <Button
        android:id="@+id/AgainOrStartAgainButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AgainOrStartExitMenuButton"
        android:layout_alignBottom="@+id/AgainOrStartExitMenuButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:onClick="onAgainOrStartClick"
        android:text="@string/again" />

    <TextView
        android:id="@+id/AgainOrdStartText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp" />

</RelativeLayout>